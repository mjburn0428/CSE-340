<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %> <% if (messages && messages.notice) { %>
    <p class="flash-message"><%= messages.notice %></p>
    <% } %> <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
    

<!-- Login Form -->
<div class="form-box">
    <form id="loginForm" action="/account/login" method="post">
        <div class="email">
            <label for="login_email">Email: </label>
            <input id="login_email" name="account_email" type="email" placeholder="youremail@email.com" 
            required value="<%= locals.account_email %>"
            > 
        </div>
        <div class="password">
            <label for="login_password">Password: </label>
            <input id="login_password" name="account_password" type="password" placeholder="Password" 
            required>            
            <p>Please login with your password. </p>
        </div>
        <button type="submit" class="form-btn">Login</button>
        <div class="register">
            <p>No account? </p>
            <a href="/account/register">Register here</a>
        </div>
    </form>
</div>